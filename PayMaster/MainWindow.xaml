<Window x:Class="PayMaster.MainWindow"
        x:Name="_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PayMaster"
        mc:Ignorable="d"
        Title="PAY MASTER" Height="700" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="1055*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnPayIn"  HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Width="120" Height="60" Click="BtnPayIn_Click" FontSize="14" Foreground="Black">
            <StackPanel Orientation="Vertical" >
                <Image Source="money_plus_64x64.png" Margin="0,0,0,0" HorizontalAlignment="Center" Height="30" Width="30"  Stretch="Uniform"/>
                <TextBlock FontWeight="Bold" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0,0,0,0">WPŁATA</TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="BtnPayOut"  HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Width="120" Height="60" Click="BtnPayOut_Click" FontSize="14" Foreground="Black" Background="#FFDDDDDD">
            <StackPanel Orientation="Vertical">
                <Image Source="money_minus_64x64.png" Margin="0,0,0,0" HorizontalAlignment="Center" Height="30" Width="30" Stretch="Uniform"/>
                <TextBlock FontWeight="Bold" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0,0,0,0">WYPŁATA</TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="BtnTargets" HorizontalAlignment="Left" Margin="10,176,0,0" VerticalAlignment="Top" Width="120" Height="60" Click="BtnTargets_Click" FontSize="14">
            <StackPanel Orientation="Vertical">
                <Image Source="target_64x64.png" Margin="0,0,0,0" HorizontalAlignment="Center" Height="30" Width="30" Stretch="Uniform"/>
                <TextBlock FontWeight="Bold" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0,0,0,0">CELE</TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="BtnUsers" Content="PŁATNICY" HorizontalAlignment="Left" Margin="10,254,0,0" VerticalAlignment="Top" Width="120" Height="60" Click="BtnUsers_Click" FontSize="14"/>
        <Button x:Name="BtnShowRaport" Content="RAPORTY" HorizontalAlignment="Left" Margin="10,330,0,0" VerticalAlignment="Top" Width="120" Height="60" FontSize="14"/>
        <DataGrid x:Name="MainGrid" AutoGenerateColumns="False" Grid.Column="1" HorizontalAlignment="Left" Height="580" Margin="10,26,0,0" VerticalAlignment="Top" Width="1018" CanUserResizeRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Width="80" FontSize="14" Header="DATA" Binding="{Binding TransactionDate}" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                         </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                            
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="120" FontSize="14" Header="IMIĘ" Binding="{Binding TransactionPersonName}" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="120" FontSize="14" Header="NAZWISKO" Binding="{Binding TransactionPersonSurname}" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="120" FontSize="14" Header="PSEUDONIM" Binding="{Binding TransactionPersonNick}" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="80" FontSize="14" Header="KWOTA" Binding="{Binding TransactionAmount, StringFormat={}{0:c}, ConverterCulture=pl-PL}" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="0,0,3,0"/>

                        </Style>

                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="248" FontSize="14" Header="CEL OPERACJI" Binding="{Binding TransactionTargetText}" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="248" FontSize="14" Header="OPIS" Binding="{Binding TransactionDescription}" >
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="AccountBalanceTitleLabel" Content="SALDO KONTA:"  HorizontalAlignment="Left" Margin="10,554,0,0" VerticalAlignment="Top" Width="120" Height="21" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" Padding="5,0"/>
        <Border BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Left" Height="61" Margin="10,545,0,0" VerticalAlignment="Top" Width="120" Panel.ZIndex="-1"/>
        <TextBlock x:Name="AccountBalanceValue" HorizontalAlignment="Left" TextAlignment="Center" Margin="10,580,0,0" TextWrapping="Wrap" Text="{Binding accountBalanceValue, StringFormat={}{0:c}, ConverterCulture=pl-PL}" VerticalAlignment="Top" Width="120" Height="21" FontSize="16" FontWeight="Bold" Foreground="#FF155706"/>

    </Grid>
</Window>
